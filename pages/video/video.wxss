/* page/video/video.wxss */
/* 头部搜索框 */
.header {
    display: flex;
    height: 60rpx;
    padding: 10rpx;
}
.header image{
    height: 100%;
    width: 60rpx;
}
.header .search{
    flex: 1;
    font-size: 26rpx;
    text-align: center;
    line-height: 60rpx;
    color: #d43c33;
    margin: 0 20rpx;
    border: 1px solid #eee;
}
/*nav 导航*/
.navScroll{
    display: flex;
    white-space: nowrap;
    height: 70rpx;
}
.navScroll .navItem{
    padding: 0 30rpx;
    font-size: 28rpx;
    line-height: 60rpx;
}
.navScroll .navItem .active{
    border-bottom: 1px solid #00ADEB;
}
/* 视频区域 */
.contentScroll{
    margin-top: 12rpx;
    height: calc(100vh - 152rpx);
    display: flex;
    flex-direction: column;
}
.contentScroll .scrollItem{
    padding: 0 3%;
}
.contentScroll .scrollItem .myVideo{
    width: 100%;
    height: 360rpx;
    border-radius: 10rpx;
}
.content{
    font-size: 24rpx;
    padding: 6rpx;
}
/* footer */
.footer {
    border-top: 1rpx solid #eee;
    padding: 20rpx 0;
}
.footer .avatar {
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    vertical-align: middle;
}

.footer  .nickName {
    font-size: 26rpx;
    vertical-align: middle;
    margin-left: 20rpx;
}

.footer .comments_praised {
    float: right;
    background-color: #fff;
}

.footer .comments_praised button {
    width: 120rpx;
    background-color: #fff;
    margin-top: -10rpx;
}

.icon-video1::before {
    font-family: 'icomoon';
    content: "\e90a";
    font-size: 40rpx;
    color: #00ADEB;

}
