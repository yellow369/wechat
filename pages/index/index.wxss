  flex: 1;
  font-size: 26rpx;
  text-align: center;
  line-height: 60rpx;
  color: #00ADEB;
  margin: 0 20rpx;
  border: 1px solid #00ADEB;
  border-radius: 20rpx;
}


.banners {
  width: 100%;
  height: 300rpx;
}

.banners image {
  width: 100%;
  height: 100%;

}

.navContainer {
  width: 100%;
  display: flex;
}

.navItem {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 20rpx;

